{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "deno",
      "command": "run",
      "args": [
        "--allow-all",
        "--unstable",
        "--import-map=./imports.json",
        "--config=./tsconfig.json",
        "${file}"
      ],
      "problemMatcher": [
        "$deno"
      ],
      "label": "run current file"
    },
    {
      "type": "deno",
      "command": "test",
      "args": [
        "--allow-all",
        "--unstable",
        "--import-map=./imports.json",
        "--config=./tsconfig.json",
        "${file}"
      ],
      "problemMatcher": [
        "$deno"
      ],
      "label": "test current test file"
    }
  ]
}
